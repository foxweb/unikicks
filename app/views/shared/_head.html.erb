<title><%= @taxon ? @taxon.seotitle : title %></title>
<meta http-equiv="Content-Type" content="text/html;charset=utf-8" />
<meta name="Name" content="<%= @taxon ? @taxon.seotitle : title %>" />
<meta name="Description" content="<%= @taxon ? @taxon.seodesc : '' %>" />
<%== meta_data_tags %>
<%= csrf_meta_tag %>

<%= hook :inside_head do %>
  <%== stylesheet_tags %>
  <%= stylesheet_link_tag 'jquery.jgrowl' %>
  <%= javascript_include_tag 'jquery', 'jquery.validate.min.js', 'rails', 'application', 'jquery.jgrowl.min' %>
<% end %>
<%= stylesheet_link_tag 'style' %>
<% unless I18n.locale.to_s[0..1] == 'en' %>
  <%= javascript_include_tag ['localization/messages_', I18n.locale.to_s[0..1], '.js'].join %>
<% end %>
<%= render 'shared/synergy_compare_products_js' if defined?(SpreeCompareProducts) %>
<%= render 'shared/jgrowl_startup' %>
<%= yield :head %>
