<!-- no need for thumnails unless there is more then one image -->
<% if product.images.size > 0 %>
  <ul id="product-thumbnails" class="thumbnails">
    <% product.images[0..-1].each do |i| %>  
      <li><img src="<%= i.attachment.url(:show)%>" alt="" ref="<%= i.attachment.url(:large) %>"/>
      <span>
      <div style="position:absolute;top:60px;right:280px;margin-right:-100px;width:200px;text-align:center;">
      
      <a class="zoom-image" href="#product-show-modal" style="font-size:16px;background-image:url(/images/zoom-icon.png);padding-left:18px;background-repeat: no-repeat;line-height:16px;">Увеличить изображение</a></div>
      <%= h i.alt %></span></li>
    <% end %>
  </ul>
<% end %>

<% if @product.has_variants?
  has_checked = false %>
  <h4 id="variant-images">
    <%= t('images_for') %>:
    <span><%= @selected_variant.options_text %></span>
  </h4>
  <ul id="variant-thumbnails" class="thumbnails">
    <% @variants.each do |v|
        checked = !has_checked && (v.available?)
   		  has_checked = true if checked
        
        if checked 
          v.images.each do |i| %>  
            <li><%= link_to(image_tag(i.attachment.url(:mini)), i.attachment.url(:large), :rel => "prettyPhoto[pp_gal]", :rev => i.attachment.url(:product)) %> %></li>
          <% end %>
        <% end %>
      <% end %>
    </ul>
<% end %>
